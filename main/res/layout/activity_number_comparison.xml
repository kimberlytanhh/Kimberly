<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NumberComparisonActivity">

    <!-- Background -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background"
        android:scaleType="centerCrop"
        android:alpha="0.9"
        android:contentDescription="Background" />

    <!-- Scrollable Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:layout_marginBottom="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Avatar Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/imgAvatar"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/whale"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Avatar" />

                <TextView
                    android:id="@+id/tvAvatarMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Whaley says: Which number is bigger?"
                    android:textSize="18sp"
                    android:textColor="#0077be"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Prompt -->
            <TextView
                android:id="@+id/tvComparePrompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Which number is bigger?"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tvAttemptCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Questions Attempted: 0"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FF5722"
                android:layout_marginBottom="24dp" />

            <!-- Two Numbers -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvNumberLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="40dp" />

                <TextView
                    android:id="@+id/tvNumberRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:textSize="40sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Answer Buttons -->
            <Button
                android:id="@+id/btnLeftIsBigger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Left is Bigger"
                android:textSize="18sp"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/btnRightIsBigger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Right is Bigger "
                android:textSize="18sp"
                android:layout_marginBottom="24dp" />


            <!-- Feedback -->
            <TextView
                android:id="@+id/tvCompareFeedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"
                android:textColor="#FF5722"
                android:layout_marginBottom="24dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_gravity="bottom"
        android:gravity="center">

        <Button
            android:id="@+id/btnCompareRetry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🔁 Try Another Question"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnCompareBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🔄 Change Activity"
            android:textSize="18sp" />
    </LinearLayout>
</FrameLayout>
